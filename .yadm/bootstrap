#!/bin/bash

NC='\033[0m'
GREEN='\033[0;32m'
RED='\033[0;31m'

# replace node_modules
case $(uname) in
    "Darwin")
        sed -i "" -e "s#prefix=.*#prefix=${HOME}/.node_modules#" ${HOME}/.npmrc
        ;;
    "Linux")
        sed -i -e "s#prefix=.*#prefix=${HOME}/.node_modules#" ${HOME}/.npmrc
        ;;
    *)
        ;;
esac

# TODO when using Arch Linux, where is binary stored.
# install packages from pypi
PYPI_PACKAGES="mycli paramiko bpython neovim jedi yarp"
pip3 install ${PYPI_PACKAGES}
